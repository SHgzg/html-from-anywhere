{
  "name": "html-from-anywhere",
  "version": "1.0.0",
  "description": "A TypeScript CLI tool to fetch data from various sources and generate email-compatible HTML files",
  "main": "dist/cli/index.js",
  "bin": {
    "html-from-anywhere": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "email",
    "html",
    "cli",
    "data-pipeline",
    "email-generator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "marked": "^11.0.0",
    "handlebars": "^4.7.8",
    "joi": "^17.11.0",
    "chalk": "^5.3.0",
    "lodash": "^4.17.21",
    "csv-parse": "^5.5.0",
    "csv-stringify": "^6.4.0"
  },
  "optionalDependencies": {
    "mysql2": "^3.6.0",
    "pg": "^8.11.0",
    "mongodb": "^6.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/lodash": "^4.14.202",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "templates"
  ]
}
